/* Carousel */
.carousel-caption p {
    font-size: 20px;
    line-height: 1.4;
}
.carousel-caption {
    top: 150px;
    bottom: auto;
}

/* Make .svg files in the carousel display properly in older browsers */
.carousel-inner .item img[src$=".svg"] {
    width: 100%;
}

.carousel-inner > .item > img {
    margin: 0 auto;
}

.carousel-inner .item {
    background-color: rgb(232, 217, 88);
}
/* QR code generator */
#qrCode {
    margin: 15px;
}

.tales {
    width: 100%;
}

.carousel-inner {
    width: 100%;
    max-height: 400px !important;
}

.custom-container-fluid {
    margin-right: auto;
    margin-left: auto;
}

/* Hide/rearrange for smaller screens */
@media screen and (max-width: 767px) {
    /* Hide captions */
    /*.carousel-caption {
        display: none;
    }*/

    .carousel-inner{
        width:100%;
        max-height: 200px !important;
    }
    .carousel-caption {
        top: 50px;
        bottom: auto;
    }
}
